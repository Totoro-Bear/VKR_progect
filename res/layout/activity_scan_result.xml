<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E1FB"
    tools:context=".ActivityScanResult"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:text="Результат сканирования"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="По данным VirusTotal"
        android:textColor="#0968B3"
        android:textSize="18sp"
        tools:text="По данным VirusTotal" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:text="Статус"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:text="Тут будет полезная информация"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="#037065"
        android:textSize="18sp"
        android:text= "По данным Kaspersky Threat Intelligence Portal"
        tools:text="По данным Kaspersky Threat Intelligence Portal" />

    <TextView
        android:id="@+id/tvStatus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:text="Статус"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:text="Тут тоже будет полезная информация"
        android:layout_marginTop="30dp"/>

</LinearLayout>